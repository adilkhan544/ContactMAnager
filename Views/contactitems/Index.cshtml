 @model IEnumerable<ContactMAnager.Models.contactitem>

@{
    ViewData["Title"] = "Index";
}
<h1 class="text-center sm:text-2xl text-xl font-bold my-6">Contacts</h1>
<div class="w-1/3  flex items-center justify-center  border-2
border-white my-4 text-left  rounded-xl bg-black">
    <input id="searchInput" class="w-full text-left rounded-xl py-3
text-white bg-black px-6" id="searchbar" type="search" name="name" value="" placeholder="Search" />
</div>
@foreach (var items in Model)
{
  

    <a asp-action="Details" asp-route-id="@items.Id" class=" border-2
border-white rounded-xl w-1/4 py-3 flex items-center justify-start  space-x-8 mb-4 px-4">
        @if (@items.ImagePath != null)
        {
            <img class="w-8 h-8 rounded-full object-cover object-center" src="@items.ImagePath
            " alt="Alternate Text" />
        }
        else
        {
            <img class="w-8 " src="~/images/uploadImage.png">

        }
        <h1>@items.FirstName @items.MiddleName @items.LastName </h1>
    </a>
  
   <a class="fixed right-10 bottom-10 block" asp-action="Create">
       <img class="w-10 "  src="~/images/icons8-add-50.png" alt="Alternate Text" />
   </a>

}


<h1 class="sm:static  absolute top-10 right-20 text-xl font-semibold">Total Contacts: @ViewBag.ContactCount</h1> 
@section Scripts {
  
    <script src="~/js/Index.js"></script>
}
