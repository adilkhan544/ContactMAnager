 @model ContactMAnager.Models.contactitem

@{
    ViewData["Title"] = "Delete";
}

<div class=" flex items-center justify-center text-center space-y-4 flex-col mt-10">
	@if (Model.ImagePath != null)
	{
		<img class="w-36 h-36 rounded-full object-center object-cover" src="@Model.ImagePath">
	}
	else
	{
		<img class="w-36 h-36 rounded-full" src="~/images/uploadImage.png">
	}
	<h1 class="text-xl ">@Model.FirstName @Model.MiddleName @Model.LastName</h1>
	<h2>@Model.Nickname</h2>
</div>
<div class="flex justify-center items-center space-x-24 mt-4">
	<img class="cursor-pointer" src="~/images/icons8-call-50.png" alt="Alternate Text" />
	<img class="cursor-pointer" src="~/images/icons8-message-50.png" alt="Alternate Text" />
	<img class="cursor-pointer" src="~/images/icons8-video-calling-66.png" alt="Alternate Text" />
	@if (Model.Email != null)
	{

		<img class="cursor-pointer" src="~/images/icons8-email-50 (1).png" alt="Alternate Text" />
	}
	else
	{

	}
	@if (Model.Address != null)
	{
		<a class="w-14 h-14 rounded-full bg-[#666666] flex items-center justify-center cursor-pointer" href="https://www.google.com/maps/search/?api=1&query=@Model.Address" target="_blank">
			<img src="~/images/icons8-direction-50.png" alt="Call" class="w-8">
		</a>
	}
	else
	{

	}

</div>
<div class="flex items-center justify-center text-center w-full flex-col space-y-8">
	<h1 class="text-xl">Contact Info</h1>

	<div class=" flex justify-center items-center  space-x-8 w-1/3">
		<div class="w-full flex items-center space-x-6">

			<img class="w-10" src="~/images/icons8-call-50.png" alt="Alternate Text" />
			<div class="flex w-full justify-center items-start flex-col">
				<h1>@Model.PhoneNumber</h1>
				<h1>Mobile</h1>
			</div>

		</div>

		<div class="flex w-fu items-center justify-center space-x-6">
			<img class="w-10" src="~/images/icons8-video-calling-66.png" alt="Alternate Text" />
			<img class="w-10" src="~/images/icons8-message-50.png" alt="Alternate Text" />
		</div>
	</div>


	<div class=" flex justify-center items-center  space-x-8 w-1/3">
		<div class="w-full flex items-center space-x-6">

			<img class="w-10 invert grayscale" src="~/images/email.png" alt="Alternate Text" />
			<div class="flex w-full justify-center items-start flex-col">
				<h1>@Model.Email</h1>
				<h1>Home</h1>
			</div>

		</div>
	</div>

	<div class=" flex justify-center items-center  space-x-8 w-1/3">
		<div class="w-full flex items-center space-x-6">

			<img class="w-10 invert grayscale" src="~/images/address.png" alt="Alternate Text" />
			<div class="flex w-full justify-center items-start flex-col">
				<h1>@Model.Address</h1>
				<h1>Location</h1>
			</div>

		</div>
		<div class="flex w-fu items-center justify-center space-x-6">
			<a class="w-10 h-10 rounded-full bg-[#666666] flex items-center justify-center cursor-pointer" href="https://www.google.com/maps/search/?api=1&query=@Model.Address" target="_blank">
				<img src="~/images/icons8-direction-50.png" alt="Call" class="w-8">
			</a>

		</div>
	</div>

	<div class=" flex justify-center items-center  space-x-8 w-1/3">
		<div class="w-full flex items-center space-x-6">

			<img class="w-10 invert grayscale" src="~/images/nickname.png" alt="Alternate Text" />
			<div class="flex w-full justify-center items-start flex-col">
				<h1>@Model.Nickname</h1>
				<h1>LocalName</h1>
			</div>

		</div>

	</div>

	<div class=" flex justify-center items-center  space-x-8 w-1/3">
		<div class="w-full flex items-center space-x-6">

			<img class="w-10 invert grayscale" src="~/images/birthday.png" alt="Alternate Text" />
			<div class="flex w-full justify-center items-start flex-col">
				<h1>@Model.BirthDay?.ToString("dd/MM/yyyy")</h1>
				<h1>Birthday</h1>
			</div>

		</div>

	</div>
	<div class=" flex justify-center items-center  space-x-8 w-1/3">
		<div class="w-full flex items-center space-x-6">

			<img class="w-10 invert grayscale" src="~/images/notes.png" alt="Alternate Text" />
			<div class="flex w-full justify-center items-start flex-col">
				<h1>Notes</h1>
				<h1>@Model.Notes</h1>
			</div>

		</div>
	</div>
	</div>
	<form asp-action="Delete" class="absolute top-10 right-20 ">
        <input type="hidden" asp-for="Id" />
	<input type="submit" value="Delete" class="btn btn-danger w-36 py-3 rounded-xl text-xl" />

</form>

 